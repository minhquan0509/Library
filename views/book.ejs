<%- include('partials/header'); -%>
<div class="container content">
  <div class="row">
    <% data.forEach((book)=>{ %>
    <div class="col-3">
      <div class="card" style="width: 18rem;">
        <img
          src="<%= book.imageLink %>"
          class="card-img-top card-img-book" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= book.title %></h5>
          <p class="card-text"><%= book.description.substring(0,100) + '...' %></p>
          <a href="books/<%= book.bookID %>" class="btn btn-primary">Details</a>
        </div>
      </div>
    </div>
    <%}); %>
  </div>
</div>
<%- include('partials/footer'); -%>